<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triple_Eater.Pages.RoleChoice.RoleInfoInitPage31"
             Title="Role Info">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label 
            Grid.Row="0" 
            Text="{Binding CurrentPlayer.Name}" 
            VerticalOptions="Center" 
            HorizontalOptions="Center"
        />

        <Label 
            Margin="25, 5, 25, 5"
            HorizontalTextAlignment="Center"
            Grid.Row="1" Text="Press DONE to receive secret information about your attitute towards eating other's food."
            VerticalOptions="Center" 
            HorizontalOptions="Center"
        />

        <Label 
            Margin="25, 5, 25, 5"
            HorizontalTextAlignment="Center"
            Grid.Row="2" 
            Text="Do not show the next screen with sensitive information to any other player."
        />

        <Button Grid.Row="3" VerticalOptions="Fill" HorizontalOptions="Center" Text="Done" Clicked="NextPageButton_OnClickedAsync"/>
    </Grid>
</ContentPage>