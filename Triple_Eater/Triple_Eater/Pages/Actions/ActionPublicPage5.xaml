<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Triple_Eater.Pages.Actions.ActionPublicPage5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding CurrentPlayer.Operation}"/>

            <Image Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Source="Glutton.png"/>

            <Label Grid.Row="2" Margin="25, 5, 25, 5" VerticalOptions="Center" HorizontalOptions="Center" Text="Read following information out loud:"/>

            <Label Grid.Row="3" Margin="25, 5, 25, 5" VerticalOptions="Center" HorizontalOptions="Center" Text="This is operation text."/>

        </Grid>

        <Button Grid.Row="1" VerticalOptions="Fill" HorizontalOptions="Center" Text="Done" Clicked="NextPageButton_OnClicked"/>
    </Grid>
</ContentPage>