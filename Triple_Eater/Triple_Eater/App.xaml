<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Triple_Eater.Converters"
             x:Class="Triple_Eater.App">
    <Application.Resources>
        <ResourceDictionary>
            <local:OperationToStringConverter x:Key="OperationToStringConverter"/>
            <local:IntToBoolConverter x:Key="IntToBoolConverter"/>
            
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="DodgerBlue"/>
                <Setter Property="BackgroundColor" Value="LightSkyBlue"/>
            </Style>
            
            <Style TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="OutlineColor" Value="Black"/>
                <Setter Property="HasShadow" Value="True"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
            </Style>

            <Style TargetType="Button" x:Key="ContinueButton">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="BorderColor" Value="Black"/>
                <Setter Property="BorderWidth" Value="1"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>